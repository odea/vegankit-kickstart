extends ../page-layout

block variables
  - var title = "{{ be.title }}"
  - var dataPage = "be"
  - var butterfly = fs.readFileSync('lib/img/butterfly.svg')

block page-content
  | {{#be}}
  header.page-header
    != butterfly
    h1 {{ title }}

  blockquote
    | {{ veganism_is_not }}
    cite Gary L. Francione

  h2 {{ where_to_start }}
  p {{ some_of_our_newly }}&nbsp;
    +link(0)
  p {{ not_that_theres_anything }}
  p
    +link(1)
  p {{ weve_designed_these_recipes }}
  p {{ we_also_recommend_converting }}
  +img(0)
  p {{ if_you_think_you_can }}

  h2 {{ is_veganism_expensive }}
  p {{ no_veganism_is_not_expensive }}
  p {{ this_myth_is_also_perpetuated }}
  p {{ veganism_is_actually_easy }}&nbsp;
    +link(2)
  p {{ if_youre_not_a_fan_of_recipes }}
  p 
    +link(3)
  h2 {{ what_about_my_nonvegan }}
  p {{ what_should_we_do_about }}
  p {{ this_is_a_good_time }}
  p {{ if_you_see_animals_as }}
  p
    +link(4)

  +img(1)
  h2 {{ family_issues }}
  p {{ even_though_youre_motivated }}
  h3 {{ being_vegan_in_a }}
  p {{ not_all_families_are }}
  p {{ you_can_ease_any }}
  p {{ as_for_your_familys }}

  h3 {{ raising_vegan_children }}
  p {{ plenty_of_vegans_have }}

  h4 {{ check_out_these_blogs }}
  ul
    li
      +link(5)
      br
      {{ from_vegan_parent }}
    li
      +link(6)
      br
      {{ vegan_couple_lucas }}
  
  h2 {{ recommended_reading }}
